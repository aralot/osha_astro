---
import Icon from 'astro-icon';

import Menu from './Menu.astro';
import Form from './form';

import background from './background.webp';
import backgroundMobile from './background.mobile.webp';
---

<div class="container">
  <img
    class="background"
    srcset={`${backgroundMobile} 1141w, ${background} 2282w`}
    sizes="(max-width: 1200px) 1141px,
         2282px"
    src={background}
  />

  <div class="content">
    <div class="navigation">
      <div class="logo">
        <Icon name="logo" />
      </div>
      <Menu
        items={[
          ['courses', 'Курсы'],
          ['about', 'О школе'],
          ['teachers', 'Преподаватели'],
          ['reviews', 'Отзывы'],
        ]}
      />
      <div class="form-container">
        <Form client:only="react" />
      </div>
    </div>

    <div class="about">
      <div class="title">
        Мини-курсы
        <br />
         по программированию
        <br />
         для детей 8-17 лет
      </div>
      <div class="description">
        За 3 онлайн-занятия с преподавателем ребенок погрузится в предмет и
        научится писать код
      </div>
      <div class="start-at">
        Старт — <span id="start-at-value"></span>
      </div>
      <div class="enroll">
        <a id="button1" href="#form-enroll" class="enroll-button">Записаться</a>
        <div class="enroll-price">
          <div class="enroll-by">за</div>
          <div class="enroll-free">0₽</div>
          <div class="enroll-full-price">5400₽</div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  const getStartAtValue = () => {
    const DAY_MS = 60 * 60 * 24 * 1000;
    let date = new Date();
    const day = date.getDay();
    switch (day) {
      case 0:
      case 1:
      case 3:
        date = new Date(date.getTime() + DAY_MS);
        break;
      case 2:
      case 6:
        date = new Date(date.getTime() + DAY_MS * 2);
        break;
      case 4:
        date = new Date(date.getTime() + DAY_MS * 4);
        break;
      case 5:
        date = new Date(date.getTime() + DAY_MS * 3);
        break;
    }
    return new Intl.DateTimeFormat('ru', {
      day: 'numeric',
      month: 'long',
    }).format(date);
  };

  const startAtValue = document.getElementById('start-at-value');
  startAtValue.innerHTML = getStartAtValue();

  const button = document.getElementById('button1');
  button.addEventListener('click', () => {
    window.ym(93302549, 'reachGoal', 'click_button1');
  });
</script>

<style lang="scss">
  .container {
    position: relative;
    height: 650px;

    background: linear-gradient(
        0deg,
        rgba(230, 230, 230, 0.5),
        rgba(230, 230, 230, 0.5)
      ),
      linear-gradient(0deg, rgba(250, 243, 255, 0.2), rgba(250, 243, 255, 0.2)),
      #ffffff;

    &:before {
    }

    @media (min-width: 1200px) {
      height: 680px;

      background: linear-gradient(
          0deg,
          rgba(230, 230, 230, 0.5),
          rgba(230, 230, 230, 0.5)
        ),
        rgba(250, 243, 255, 0.2);

      &:before {
        background-size: contain;
      }
    }
  }

  .background {
    display: block;
    width: 100%;
    height: 100%;

    position: absolute;
    right: 0;
    bottom: 0;

    object-position: bottom right;
    object-fit: contain;
  }

  .content {
    position: relative;

    @media (min-width: 1200px) {
      width: 1160px;
      margin: 0 auto;
    }
  }

  .navigation {
    padding: 20px;
    margin-bottom: 16px;

    @media (min-width: 1200px) {
      display: flex;
      justify-content: space-between;
      margin-bottom: unset;
      padding: unset;
    }
  }

  .logo {
    width: 22px;
    height: 33px;
    color: #602b7a;

    @media (min-width: 1200px) {
      color: white;
      margin-right: 113px;
      padding-left: 4px;
      padding-top: 25px;
      position: relative;

      &:before {
        content: '';
        display: block;
        width: 173px;
        height: 215px;

        position: absolute;
        bottom: -75px;
        left: 5px;

        background: #602b7a;
        transform: rotate(34.34deg);
      }
    }

    svg {
      height: 33px;
      position: relative;
      width: 142px;
    }
  }

  .about {
    padding: 0 20px;
    @media (min-width: 1200px) {
      padding: 123px 0 0;
    }
  }

  .title {
    position: relative;
    margin-bottom: 16px;
    font-weight: 700;
    font-size: 24px;
    line-height: 30px;
    color: var(--day-text-primary);

    @media (min-width: 1200px) {
      margin-bottom: 24px;

      font-size: 48px;
      line-height: 60px;
      letter-spacing: -0.02em;
    }
  }

  .description {
    position: relative;
    margin-bottom: 12px;
    font-size: 14px;
    line-height: 18px;
    color: var(--day-text-primary);

    @media (min-width: 1200px) {
      max-width: 524px;

      font-size: 22px;
      line-height: 29px;
      letter-spacing: -0.01em;
    }
  }

  .start-at {
    margin-bottom: 24px;
    font-size: 14px;
    line-height: 18px;
    color: var(--day-interactive-primary);

    @media (min-width: 1200px) {
      margin-bottom: 48px;
      font-size: 22px;
      line-height: 29px;
      letter-spacing: -0.01em;
    }
  }

  .enroll {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24px;

    @media (min-width: 1200px) {
      flex-direction: unset;
      align-items: unset;
      gap: 12px;
      max-width: 488px;
      padding: 6px 36px 6px 6px;

      background: #ffffff;
      border-radius: 12px;
    }
  }

  .enroll-button {
    display: block;
    width: 100%;
    padding: 12px 84px;
    background: var(--day-interactive-success);
    border-radius: 12px;
    cursor: pointer;
    font-size: 18px;
    line-height: 24px;
    text-align: center;
    color: var(--day-text-buttonPrimary);
    outline: none;
    text-decoration: none;

    @media (min-width: 1200px) {
      width: unset;
    }
  }

  .enroll-price {
    display: flex;
    gap: 12px;
    align-items: center;
  }

  .enroll-by {
    font-weight: 700;
    font-size: 24px;
    line-height: 30px;
    color: var(--day-interactive-success);
  }

  .enroll-free {
    font-weight: 700;
    font-size: 36px;
    line-height: 45px;
    color: var(--day-interactive-success);
  }

  .enroll-full-price {
    position: relative;
    font-weight: 700;
    font-size: 24px;
    line-height: 30px;
    color: #c5c9cc;

    &:after {
      position: absolute;
      top: 50%;
      left: -5%;
      content: '';
      display: block;
      rotate: -17deg;
      height: 2px;
      width: 110%;
      background: var(--day-text-filledIcon);
    }
  }

  .form-container {
    @media (min-width: 1200px) {
      width: 450px;
      height: 56px;
    }
  }
</style>
