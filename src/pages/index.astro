---
import Layout from '../layouts/Layout.astro';
import Header from '../components/header';
import Courses from '../components/courses';
import Enroll from '../components/enroll';
import School from '../components/school';
import Teachers from '../components/teachers';
import Reviews from '../components/reviews';
import Faq from '../components/faq';
import Footer from '../components/footer';
import YandexMetrika from '../components/YandexMetrika';
---

<Layout title="Мини-курсы по программированию для детей 8-17 лет">
  <Header />
  <div class="content">
    <Courses />
    <Enroll />
    <School />
    <Teachers client:only="react" />
    <Reviews client:only="react" />
    <Enroll isLight />
    <Faq client:only="react" />
  </div>
  <Footer />
  <YandexMetrika client:only="react" />
</Layout>

<script>
  // Google reCaptcha
  const KEY = '6LdK_RclAAAAADApWB10Y1ClEYT6KEL0XkCLNZRv';
  const script = document.createElement('script');
  script.src = 'https://www.google.com/recaptcha/api.js?render=' + KEY;
  script.addEventListener('load', () => {
    window.grecaptcha.ready(() => {
      window.grecaptcha
        .execute(KEY, { action: 'online_booking' })
        .then(token => {
          window.GRECAPTCHA_TOKEN = token;
        });
    });
  });
  document.body.appendChild(script);
</script>

<style lang="scss">
  .content {
    @media (min-width: 1200px) {
      width: 1160px;
      margin: 0 auto;
    }
  }
</style>
